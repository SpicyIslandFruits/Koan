<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mk.spicyisland.koan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mk.spicyisland.koan.Application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/handai_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/handai_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mk.spicyisland.koan.Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mk.spicyisland.koan.Activities.WebViewActivity"
            android:parentActivityName="com.mk.spicyisland.koan.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mk.spicyisland.koan.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>